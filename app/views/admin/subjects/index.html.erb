<% provide :title, t(".title") %>
<div class ="container index-subject">
  <h1><%= t".title" %></h1>
  <hr>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col"><%= t(".name_sub") %></th>
        <th scope="col"><%= t(".action") %></th>
      </tr>
    </thead>
    <tbody>
      <% @subjects.each do |subject| %>
        <tr>
          <td><%= subject.name %></td>
          <td>
            <%= link_to t(".edit"), edit_admin_subject_path(subject), class: "btn btn-primary btn-md"%>
            <%= link_to t(".delete"), admin_subject_path(subject), class: "btn btn-danger btn-md",
              method: :delete, data: { confirm: t(".confirm")} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= will_paginate @subjects %>
  <br>
  <%= link_to t(".add") , new_admin_subject_path, class: "btn btn-success btn-md" %>
  </div>
</div>
