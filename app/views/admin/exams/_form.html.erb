<%= form_for [:admin , @exam] do |f| %>
  <div class="container">
    <div class="col-md-8 col-md-offset-2" >
      <div class="form-group field">
        <%= f.label :subject_id %>
        <%= f.select :subject_id, options_for_select(@subjects), {include_blank: true}, class: "form-control" %>
      </div>
      <div class="form-group field">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group field">
        <%= f.label :duration %>
        <%= f.text_field :duration, class: "form-control" %>
      </div>

      <div class="form-group field">
        <%= f.fields_for :questions do |question| %>
          <%= render "question_fields", f: question %>
        <% end %>
      </div>
      <div class="link-questions">
        <p> <%= link_to_add_fields(t("admin.exams.new.add_q"),f, :questions) %></p>
      </div>
      <div class="actions">
        <%= f.submit button, class: "btn btn-primary btn-md button" %>
      </div>
    </div>
  </div>
<% end %>
